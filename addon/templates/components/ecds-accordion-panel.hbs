{{#each items as |listItem|}}
  {{#ecds-accordion-item item=listItem activeItem=activeItem as |isExpanded| }}
  {{yield listItem
          (hash isExpanded=isExpanded
                header=(component 'ecds-accordion-header' isExpanded=isExpanded click=(action 'toggleActiveItem' listItem))
                body=(component 'ecds-accordion-body' isExpanded=isExpanded)
                footer=(component 'ecds-accordion-footer' isExpanded=isExpanded))}}
  {{/ecds-accordion-item}}
{{/each}}
